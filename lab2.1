#include <stdio.h>
#include <string.h>

void reverse( char str1[], char str2[] ) ;

int main() {
    char text[50] = "I Love You" ;
    char out[50] ;
    reverse( text, out ) ; //เรียกใช้ฟังก์ชั่น
    printf( "%s\n", out) ; //ค่าเอาท์พุต
    return 0 ;
}// end function

void reverse( char str1[], char str2[] ) { 
    int length = 0, i = 0 ;

    while (str1[length] != '\0' ) //คำนวณความยาวจาก str1
    {
        length++ ;
    }
    for( i = 0 ; i < length ; i++ ) { //คัดลอกจากหลังไปหน้า
        str2[i] = str1[length - i - 1 ] ;
    }
    str2[length] = '\0' ;
    
}//end void reverse
