int main() {

    int *b = (int *)malloc(sizeof(int)) ; //จัดสรรหน่วยความจำ b
    *b = 10 ;
    int *c = (int *)malloc(sizeof(int)) ; //จัดสรรหน่วยความจำ c
    *c = 20 ;

    int **a ; //ตัวแปร a ต้องชี้ไปยังตัวแปร int*

    go( &a, &b ) ; //เรียกใช้ฟังก์ชั่น go เพื่อให้ a ชี้ไปที่ b
    printf( "%d %p %p %p\n", **a, *a, a, &a ) ;
    go( &a, &c ) ; //เรียกใช้ฟังก์ชั่น go เพื่อให้ a ชี้ไปที่ c
    printf( "%d %p %p %p\n", **a, *a, a, &a ) ; 

    free( b ) ; //ปล่อยหน่วยความจำ
    free( c ) ;

    return 0 ;
} //end main

void go( int ***p, int **z ) {
    *p = z ; //ให้ p ชี้ไปที่ z ทำให้ a ชั้ไปที่ b หรือ c
} //end function void
